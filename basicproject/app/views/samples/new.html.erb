<h1>Create a new samples</h1>

<% if @sample.errors.any? %>
	<h2>The following errors prevented the form form getting saved</h2>
	<ul>
		<% @sample.errors.full_messages.each do |msg| %>
		<li> <%= msg%> </li>
		<% end %>
	</ul>
<% end %>
<%= form_for @sample do |f|%>
	<p>
		<%= f.label :name %> <br>
		<%= f.text_field :name %>
	</p>
	<p>
		<%= f.label :description %> <br>
		<%= f.text_area :description %>
	</p>
	<p>
		<%= f.submit %>
	</p>


<% end %>
<%= link_to "Back to Samples listing", samples_path %>